# ============================================================================
# Machine-Specific Aliases (HiveNet/WSL-only)
# ============================================================================
if [[ "$IS_HIVENET_CLIENT" == true ]]; then
  alias avdump='dotnet /mnt/g/02\ -\ Utilities/AVDump3/AVDump3CL.dll FROMFILE /mnt/g/02\ -\ Utilities/AVDump3/arguments.txt /mnt/plex/anime'
  alias hivedrop='telnet 192.168.1.25 3335'
fi

# Raspberry Pi specific aliases
if [[ "$IS_RASPBERRY_PI" == true ]]; then
  # Add Pi-specific aliases here
  alias piupdate='sudo apt update && sudo apt upgrade -y'
fi

