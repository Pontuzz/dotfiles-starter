# SSH Config Template
# Copy this to ~/.ssh/config and add your actual hosts
#
# DO NOT COMMIT the real ~/.ssh/config - it will be gitignored
# SSH config contains sensitive information (hostnames, usernames, keys)

# Global SSH settings
Host *
    # Connection timeout
    ConnectTimeout 10
    ServerAliveInterval 60
    ServerAliveCountMax 2
    
    # Use SSH key agent
    AddKeysToAgent yes
    
    # Compression for slow connections
    Compression no

# Example internal server
Host internal-server
    HostName 192.168.1.100
    User pontuzz
    Port 22
    IdentityFile ~/.ssh/keys/internal_key
    # IdentitiesOnly yes

# Example work machine
Host work
    HostName work.example.com
    User work_user
    Port 2222
    IdentityFile ~/.ssh/keys/work_key
    # ProxyCommand ssh bastion -W %h:%p
    # ProxyUseFdpass yes

# Example Raspberry Pi
Host raspberry-pi
    HostName pi.example.local
    User pi
    IdentityFile ~/.ssh/keys/pi_key

# Wildcard example - all internal machines
Host *.internal
    User internal_user
    IdentityFile ~/.ssh/keys/internal_key
    ProxyJump bastion

# Bastion host (jump host)
Host bastion
    HostName bastion.example.com
    User pontuzz
    IdentityFile ~/.ssh/keys/bastion_key
